# Database
# Replace with your MongoDB connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/jobboard

# Environment
NODE_ENV=development

# Public URLs
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Authentication
# Replace with a secure random string (at least 32 characters recommended)
JWT_SECRET=your-secure-jwt-secret-key-should-be-long-and-random
# Token lifetime (examples: 1h, 1d, 7d, 30d)
JWT_LIFETIME=30d
